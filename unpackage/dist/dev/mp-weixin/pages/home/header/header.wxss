.information {
  position: absolute;
  z-index: 999;
  top: 5vh;
  width: -webkit-fill-available;
}
.information .informationList {
  padding: 0 20px;
  width: inherit;
  display: flex;
  justify-content: space-between;
}
.information .informationList .informationListLeft {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  color: #FFFFFF;
}
.information .informationList .informationListLeft .icon {
  width: 50px;
  height: 50px;
  border-radius: 50%;
}
.information .informationList .informationListLeft .edition {
  padding-left: 12px;
}
.information .informationList .informationListRight {
  color: #EEEEEE;
}

